\makeatletter
\renewcommand{\section}{%
  \@startsection{section}{1}{\z@}{10pt}{4pt}{%
    \large\bfseries\color{black}%
  }%
}
\renewcommand{\@seccntformat}[1]{}
\def\@sect#1#2#3#4#5#6[#7]#8{%
  \ifnum #2>\c@secnumdepth
    \let\@svsec\@empty
  \else
    \refstepcounter{#1}%
    \let\@svsec\@empty
  \fi
  \begingroup
    #6{%
      \MakeUppercase{#8}\\[-6pt]%
      \textcolor{RuleGray}{\rule{\linewidth}{0.5pt}}%
    }%
  \endgroup
  \@xsect{#5}%
}
\makeatother


